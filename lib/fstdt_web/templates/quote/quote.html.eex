<% %{fundie_index: fundie_index, comment_count: comment_count, body_html: body_html, author: %{name: author}, board: %{name: board}, submitter: %{name: submitter}, url: url, id: id} = @quote %>
<article class="item">
  <aside><div><div class="callout">
    <div class="listing">
      <a class="item" href="<%= url %>">
        Written by <strong><%= author %></strong> on <strong><%= board %></strong>
      </a>
      <span class="item aside-narrow-mode-hide">
        Submitted by <strong><%= submitter %></strong>
      </span>
      <a class="item aside-narrow-mode-hide" href="<%= quote_page_path(@conn, :show, id) %>#comments">
        <%= comment_count %> comments
      </a>
      <span class="item item--compact" style="text-align:center">
        <button class="btn" style="float:left">😲️ WTF?!</button> <span class="btn-interstitial"><%= fundie_index %></span> <button class="btn" style="float:right">😐️ meh</button>
      </span>
    </div>
  </div></div></aside>
  <%= Phoenix.HTML.raw(body_html) %>
  <div class="aside-narrow-mode-show callout"><div class="listing">
    <span class="item">
      Submitted by <strong><%= submitter %></strong>
    </span>
    <a class="item" href="comments">
      <%= comment_count %> comments
    </a>
  </div></div>
</article>
